<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="#d9d5d5"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tf1"
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name"/>
        <TextView
            android:id="@+id/tf2"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_below="@id/tf1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Type"/>
        <TextView
            android:id="@+id/tf3"
            android:padding="5dp"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"/>
        <TextView
            android:id="@+id/tf4"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_below="@id/tf3"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Cancel"
                android:background="@color/colorAccent"
                android:layout_below="@id/tf4"
                android:layout_marginLeft="270dp"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/servicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:text="Ironing"
                android:padding="5dp"
                android:textSize="20dp"/>



            <TextView
                android:id="@+id/ordertype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_below="@id/tf1"
                android:text="EXPRESS DELIVERY"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textSize="20dp"/>


            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_below="@id/tf2"
                android:text="PICKUP_SCHEDULED"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_below="@id/tf3"
                android:text="February 02,2019"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:textSize="20dp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>